<log4c>
    <config>
        <appender name="file_appender" type="rollingfile">
            <param name="File" value="/workspaces/Snipets/Log4C/bin/log4c.log" />
            <param name="MaxFileSize" value="5000000" />
            <param name="MaxBackupIndex" value="1" />
            <layout type="dated">
                <param name="DateFormat" value="%a %b %d %H:%M:%S %Y" />
            </layout>
        </appender>
        <category name="mycat" priority="info" appender="file_appender" />
    </config>
</log4c>